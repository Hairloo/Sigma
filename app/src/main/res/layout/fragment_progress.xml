<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="340dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/progress_icon12"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/grey_shape" />

                    <TextView
                        android:id="@+id/progress1text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Новичок"
                        android:textAlignment="center"
                        android:textColor="@color/dark_blue"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="55dp"

                        android:background="@drawable/right_arrow_blue"
                        />
                    <TextView
                        android:id="@+id/progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="100/1000"
                        android:textColor="@color/dark_blue"
                        android:textAlignment="center"
                        android:textSize="11sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/progress_icon22"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/grey_shape" />

                    <TextView
                        android:id="@+id/progress2text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Профессионал"
                        android:textAlignment="center"
                        android:textColor="@color/dark_blue"/>
                </LinearLayout>

            </LinearLayout>
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_gravity="center_horizontal"
                android:progressDrawable="@drawable/custom_progress_bg"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/new_profile_gradient"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:id="@+id/progress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/progress_icon1"
                    android:layout_marginTop="10dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/grey_shape"
                    android:clickable="true"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/progress_text1"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Che"
                    android:layout_marginBottom="15dp"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:rotation="90"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/bottom_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/progress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/progress_icon2"
                    android:layout_marginTop="5dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/grey_shape"
                    android:clickable="true"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/progress_text2"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Che"
                    android:layout_marginBottom="15dp"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:rotation="90"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/bottom_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/progress3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/progress_icon3"
                    android:layout_marginTop="10dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/grey_shape"
                    android:clickable="true"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/progress_text3"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Che"
                    android:layout_marginBottom="15dp"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:rotation="90"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bottom_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/progress4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/progress_icon4"
                    android:layout_marginTop="10dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/grey_shape"
                    android:clickable="true"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/progress_text4"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Che"
                    android:layout_marginBottom="15dp"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:rotation="90"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/bottom_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/progress5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/progress_icon5"
                    android:layout_marginTop="10dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/grey_shape"
                    android:clickable="true"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/progress_text5"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Che"
                    android:layout_marginBottom="15dp"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:rotation="90"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/bottom_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/progress6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/progress_icon6"
                    android:layout_marginTop="10dp"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/grey_shape"
                    android:clickable="true"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/progress_text6"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Che"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>